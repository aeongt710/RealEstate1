@model IEnumerable<RealEstate1.Models.Society>
<br />

<h3>Societies</h3>
<br />
<table class="table" style="border-radius:20px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SocietyName)
            </th>
            @*            <th>
                @Html.DisplayNameFor(model => model.ImgSrc)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            @*           <th>
                @Html.DisplayNameFor(model => model.Description)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SocietyName)
                </td>
                @*         <td>
                    @Html.DisplayFor(modelItem => item.ImgSrc)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Longitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Latitude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                @*            <td>
                    @Html.DisplayFor(modelItem => item.Description)
                    </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square" style="font-size:20px;"></i></a> &nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-file-earmark-text" style="font-size:20px;"></i> </a>&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash2-fill" style="font-size:20px;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
